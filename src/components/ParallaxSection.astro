---
interface Props {
  image: string;
  alt: string;
  height?: string;
}

const { image, alt, height = '400px' } = Astro.props;
---

<section
  class="parallax-bg relative flex items-center justify-center"
  style={`background-image: url('${image}'); min-height: ${height};`}
  role="img"
  aria-label={alt}
>
  <div class="absolute inset-0 bg-[rgba(26,26,26,0.3)]"></div>
  <div class="relative z-10 text-center text-white px-6 max-w-3xl">
    <slot />
  </div>
</section>
