---
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section id="studio">
  <!-- Full-width image, no overlay -->
  <img
    src="/images/studio-interior.jpg"
    alt="Rose Pilates Studio interior"
    class="w-full h-[50vh] md:h-[60vh] object-cover"
    loading="lazy"
  />

  <!-- Text below -->
  <div class="section-padding">
    <div class="max-w-3xl mx-auto scroll-animate">
      <span class="text-xs tracking-[0.2em] uppercase font-medium" style="color: var(--color-accent-rose);">{t('studio.label')}</span>
      <h2 class="mt-4 mb-8">{t('studio.heading')}</h2>
      <p class="leading-relaxed mb-6" style="color: var(--color-text-body);">
        {t('studio.text1')}
      </p>
      <p class="leading-relaxed" style="color: var(--color-text-body);">
        {t('studio.text2')}
      </p>
    </div>
  </div>
</section>
