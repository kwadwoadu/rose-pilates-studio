---
import { getLangFromUrl, useTranslations, useTranslatedPath } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const translatePath = useTranslatedPath(lang);
---

<section class="relative h-screen min-h-[600px] flex items-center justify-center overflow-hidden">
  <!-- Background image -->
  <div class="absolute inset-0 parallax-bg" style="background-image: url('/images/rose-reformer.jpg');"></div>

  <!-- Overlay -->
  <div class="absolute inset-0 bg-[rgba(26,26,26,0.4)]"></div>

  <!-- Content -->
  <div class="relative z-10 text-center text-white px-6 max-w-3xl">
    <h1 class="text-4xl md:text-5xl lg:text-[3.5rem] font-serif font-semibold mb-6 leading-tight">
      {t('hero.title')}
    </h1>
    <p class="text-lg md:text-xl text-white/90 mb-10 font-light tracking-wide">
      {t('hero.tagline')}
    </p>
    <a href={translatePath('/booking')} class="btn-primary text-base px-8 py-4">
      {t('hero.cta')}
    </a>
  </div>

  <!-- Scroll indicator -->
  <div class="absolute bottom-8 left-1/2 -translate-x-1/2 text-white/60 flex flex-col items-center gap-2">
    <span class="text-xs tracking-widest uppercase">{t('hero.scroll')}</span>
    <svg class="w-5 h-5 animate-bounce" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
    </svg>
  </div>
</section>
